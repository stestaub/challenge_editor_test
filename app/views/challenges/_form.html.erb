<%= simple_form_for(@challenge) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :points %>
    <%= f.input :level %>

    <%= render( 'condition_show', condition: @challenge.condition ) unless @challenge.condition.nil? %>
    <%= f.input :condition_id, :collection => Condition.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
